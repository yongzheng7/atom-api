<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hello"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello ATOM APT!"
                android:textSize="30dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Class"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/test_class_api_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="获取实现接口的所有子类"
                        android:textSize="20dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:id="@+id/test_class_api_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="根据名字获取实现接口类"
                        android:textSize="20dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:id="@+id/test_class_api_name_and_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="根据名字和版本获取实现接口类"
                        android:textSize="20dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:id="@+id/test_class_api_regex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="根据正则表达式获取实现接口类"
                        android:textSize="20dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:id="@+id/test_class_api_regex_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="根据正则表达式和版本获取实现接口类"
                        android:textSize="20dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:id="@+id/test_class_api_all_param"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="所有参数设置获取实现类"
                        android:textSize="20dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Instance"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/test_dialog_void_before"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="显示dialog[方法之前显示,且同步]"
                        android:textSize="20dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:id="@+id/test_dialog_void_after"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="显示dialog[方法之后显示,且同步返回选择结果]"
                        android:textSize="20dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:id="@+id/test_dialog_return_before"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="显示dialog[构造方法]"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/test_Permission_sync"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="同步获取权限,全部获取到并执行[限制方法无返回]"
                        android:textSize="20dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp" />

                    <TextView
                        android:id="@+id/test_Permission_async_void"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="异步获取,执行和权限获取并向操作[void]"
                        android:textSize="20dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp" />

                    <TextView
                        android:id="@+id/test_Permission_async_return"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="异步获取,执行....................操作[return]"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click"
                    android:textSize="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp" />



            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>