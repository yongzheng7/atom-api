<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hello"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello ATOM APT BY API"
                android:textSize="30dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AtomApi 测试"
                    android:textSize="25dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <TextView
                    android:id="@+id/show_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/test_class_api_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="测试_获取实现接口Api的所有子类"
                        android:textSize="20dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/test_class_api_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="测试_获取实现接口Api的所有子类 , 根据name和正则"
                        android:textSize="20dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/test_class_api_filter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="测试_获取实现接口Api的所有子类 , 根据ApiFilter"
                        android:textSize="20dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/print_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>